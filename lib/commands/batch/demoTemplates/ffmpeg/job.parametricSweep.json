{
    "parameters": {
        "accountName": {
            "type": "string",
            "metadata": {
                "description": "The name of batch account"
            }
        },
        "inputFileStorageContainerUrl": {
            "type": "string",
            "metadata": {
                "description": "The url of Azure storage blob which the processing file located",
                "ncjDirectory": "SingleFile.fullurl"
            }
        },
        "outputFileStorageUrl": {
            "type": "string",
            "metadata": {
                "description": "The url of Azure storage container which hold the output file",
                "ncjDirectory": "ResourceFolder.fullurl"
            }
        },
        "poolName": {
            "type": "string",
            "defaultValue": "ffmpegpool",
            "metadata": {
                "description": "The name of Azure Batch pool which runs the job"
            }
        },
        "jobName": {
            "type": "string",
            "metadata": {
                "description": "The name of Azure Batch job"
            }
        }
    },
    "job": {
        "type": "Microsoft.Batch/batchAccounts/jobs",
        "apiVersion": "2016-12-01",
        "properties": {
            "id": "[parameters('jobName')]",
            "constraints": {
                "maxWallClockTime": "PT5H",
                "maxTaskRetryCount": 1
            },
            "poolInfo": {
                "poolId": "[parameters('poolName')]"
            },
            "jobPreparationTask": {
                "commandLine" : "sudo apt-get install ffmpeg -y",
                "runElevated": true,
                "waitForSuccess": true
            },
            "taskFactory": {
                "type": "parametricSweep",
                "properties": {
                    "parameterSets": [
                        {
                            "start": 1,
                            "end": 5,
                            "step": 1
                        }
                    ],
                    "repeatTask": {
                        "commandLine": "ffmpeg -i sampleVideo{0}.mkv -vcodec copy -acodec copy output{0}.mp4 -y",
                        "resourceFiles": [
                            {
                                "filePath": "sampleVideo{0}.mkv",
                                "blobSource": "[parameters('inputFileStorageContainerUrl')]sampleVideo{0}.mkv"
                            }
                        ]
                    }
                }
            }
        }
    }
}