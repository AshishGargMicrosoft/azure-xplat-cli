{
    "parameters": {
        "dataGroup": {
            "type": "string",
            "defaultValue": "video_data",
            "metadata": {
                "description": "The auto-storage group where the input data is stored"
            }
        },
        "outputFileStorageUrl": {
            "type": "string",
            "metadata": {
                "description": "The url of Azure storage container which hold the output file"
            }
        },
        "poolName": {
            "type": "string",
            "defaultValue": "ffmpegpool",
            "metadata": {
                "description": "The name of Azure Batch pool which runs the job"
            }
        },
        "jobName": {
            "type": "string",
            "metadata": {
                "description": "The name of Azure Batch job"
            }
        },
        "runAsAdmin": {
            "type": "bool",
            "defaultValue": true,
            "metadata": {
                "description": "Run pool start task with elevated permission"
            }
        },
        "jobStart": {
            "type": "int",
            "defaultValue": 1,
            "metadata": {
                "description": "The sweep start parameter"
            }
        },
        "jobEnd": {
            "type": "int",
            "defaultValue": 5,
            "metadata": {
                "description": "The sweep end parameter"
            }
        }
    },
    "job": {
        "type": "Microsoft.Batch/batchAccounts/jobs",
        "apiVersion": "2016-12-01",
        "properties": {
            "id": "[parameters('jobName')]",
            "constraints": {
                "maxWallClockTime": "PT5H",
                "maxTaskRetryCount": 1
            },
            "poolInfo": {
                "poolId": "[parameters('poolName')]"
            },
            "jobPreparationTask": {
                "commandLine" : "sudo apt-get install ffmpeg -y",
                "runElevated": "[parameters('runAsAdmin')]",
                "waitForSuccess": true
            },
            "taskFactory": {
                "type": "parametricSweep",
                "parameterSets": [
                    {
                        "start": "[parameters('jobStart')]",
                        "end": "[parameters('jobEnd')]",
                        "step": 1
                    }
                ],
                "repeatTask": {
                    "commandLine": "ffmpeg -i sampleVideo{0}.mkv -vcodec copy -acodec copy output{0}.mp4 -y",
                    "resourceFiles": [
                        {
                            "source": { 
                                "fileGroup": "[parameters('dataGroup')]",
                                "prefix": "sampleVideo{0}.mkv"
                            }
                        }
                    ]
                }
            }
        }
    }
}
