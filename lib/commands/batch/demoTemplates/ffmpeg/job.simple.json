{
    "parameters": {
        "dataGroup": {
            "type": "string",
            "defaultValue": "convert_data",
            "metadata": {
                "description": "The auto-storage group where the input data is stored"
            }
        },
        "inputType": {
            "type": "string",
            "defaultValue": "wav",
            "metadata": {
                "description": "The extension of the input data"
            }
        },
        "outputFileStorageUrl": {
            "type": "string",
            "metadata": {
                "description": "The url of Azure storage container which hold the output file"
            }
        },
        "poolName": {
            "type": "string",
            "defaultValue": "ffmpegpool",
            "metadata": {
                "description": "The name of Azure Batch pool which runs the job"
            }
        },
        "jobName": {
            "type": "string",
            "metadata": {
                "description": "The name of Azure Batch job"
            }
        }
    },
    "job": {
        "type": "Microsoft.Batch/batchAccounts/jobs",
        "apiVersion": "2016-12-01",
        "properties": {
            "id": "[parameters('jobName')]",
            "constraints": {
                "maxWallClockTime": "PT5H",
                "maxTaskRetryCount": 3
            },
            "poolInfo": {
                "poolId": "[parameters('poolName')]"
            },
            "taskFactory": {
                "type": "taskCollection",
                "tasks": [
                    {
                        "id" : "mytask1",
                        "commandLine": "ffmpeg -y -i sample1.[parameters('inputType')] -acodec libmp3lame output.mp3",
                        "resourceFiles": [
                            {
                                "source": { 
                                    "fileGroup": "[parameters('dataGroup')]",
                                    "prefix": "sample1.[parameters('inputType')]"
                                }
                            }
                        ],
                        "outputFiles": [
                            {
                                "filePattern": "output.mp3",
                                "destination": {
                                    "container": {
                                        "path": "audio1.mp3",
                                        "containerSas": "[parameters('outputFileStorageUrl')]"
                                    }
                                },
                                "uploadDetails": {
                                    "taskStatus": "TaskSuccess"
                                }
                            }
                        ],
                        "packageReferences": [
                            {
                                "type": "aptPackage",
                                "id": "ffmpeg"
                            }
                        ]                        
                    },
                    {
                        "id" : "mytask2",
                        "commandLine": "ffmpeg -y -i sample2.[parameters('inputType')] -acodec libmp3lame output.mp3",
                        "resourceFiles": [
                            {
                                "source": { 
                                    "fileGroup": "[parameters('dataGroup')]",
                                    "prefix": "sample2.[parameters('inputType')]"
                                }
                            }
                        ],
                        "outputFiles": [
                            {
                                "filePattern": "output.mp3",
                                "destination": {
                                    "container": {
                                        "path": "audio2.mp3",
                                        "containerSas": "[parameters('outputFileStorageUrl')]"
                                    }
                                },
                                "uploadDetails": {
                                    "taskStatus": "TaskSuccess"
                                }
                            }
                        ],
                        "packageReferences": [
                            {
                                "type": "aptPackage",
                                "id": "ffmpeg"
                            }
                        ]
                    }
                ]
            }
        }
    }
}