{
    "parameters": {
        "dataGroup": {
            "type": "string",
            "defaultValue": "video_data",
            "metadata": {
                "description": "The auto-storage group where the input data is stored"
            }
        },
        "inputType": {
            "type": "string",
            "defaultValue": "mkv",
            "metadata": {
                "description": "The extension of the input data"
            }
        },
        "outputFileStorageUrl": {
            "type": "string",
            "metadata": {
                "description": "The url of Azure storage container which hold the output file"
            }
        },
        "poolName": {
            "type": "string",
            "defaultValue": "ffmpegpool",
            "metadata": {
                "description": "The name of Azure Batch pool which runs the job"
            }
        },
        "jobName": {
            "type": "string",
            "metadata": {
                "description": "The name of Azure Batch job"
            }
        }
    },
    "job": {
        "type": "Microsoft.Batch/batchAccounts/jobs",
        "apiVersion": "2016-12-01",
        "properties": {
            "id": "[parameters('jobName')]",
            "constraints": {
                "maxWallClockTime": "PT5H",
                "maxTaskRetryCount": 3
            },
            "poolInfo": {
                "poolId": "[parameters('poolName')]"
            },
            "jobPreparationTask": {
                "commandLine" : "sudo apt-get install ffmpeg -y",
                "runElevated": true,
                "waitForSuccess": true
            },
            "taskFactory": {
                "type": "taskCollection",
                "tasks": [
                    {
                        "id" : "mytask1",
                        "commandLine": "ffmpeg -i sampleVideo1.[parameters('inputType')] -vcodec copy -acodec copy output.mp4 -y",
                        "resourceFiles": [
                            {
                                "source": { 
                                    "fileGroup": "[parameters('dataGroup')]",
                                    "path": "sampleVideo1.[parameters('inputType')]"
                                }
                            }
                        ],
                        "outputFiles": [
                            {
                                "filePath": "output.mp4",
                                "containerDestination": "[parameters('outputFileStorageUrl')]",
                                "format": "Raw",
                                "uploadMode": "TaskCompletion"
                            }
                        ]
                    },
                    {
                        "id" : "mytask2",
                        "commandLine": "ffmpeg -i sampleVideo2.[parameters('inputType')] -vcodec copy -acodec copy output.mp4 -y",
                        "resourceFiles": [
                            {
                                "source": { 
                                    "fileGroup": "[parameters('dataGroup')]",
                                    "path": "sampleVideo2.[parameters('inputType')]"
                                }
                            }
                        ],
                        "outputFiles": [
                            {
                                "filePath": "output.mp4",
                                "containerDestination": "[parameters('outputFileStorageUrl')]",
                                "format": "Raw",
                                "uploadMode": "TaskCompletion"
                            }
                        ]
                    }
                ]
            }
        }
    }
}